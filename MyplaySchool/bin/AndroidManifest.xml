<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myplayschool"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.example.myplayschool.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.myplayschool.Home"
             android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity android:name="com.example.myplayschool.Learning"
             android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" ></activity>
        <activity android:name="com.example.myplayschool.AlphabetList"
             android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" ></activity>
        <activity android:name="com.example.myplayschool.Quiz"
             android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" ></activity>
  		<activity android:name="com.example.myplayschool.WelcomeScreen"
  		     android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" ></activity>
  		<activity android:name="com.example.myplayschool.Regsitration"
  		     android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" ></activity>
  		
        
  		
  		 <activity android:name="com.facebook.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/APP_ID" />
  		
        </application>

</manifest>
